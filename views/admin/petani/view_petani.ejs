    <script>
        $('#dataTable').on('click', '.button-update', function () {
            let id = $(this).data('id');
            let nama = $(this).data('nama');
            let telp = $(this).data('telp');
            let alamat = $(this).data('alamat');
            let kelompok_tani = $(this).data('kelompok_tani');
            let pengelola_irigasi = $(this).data('pengelola_irigasi');
            let luas_tanah = $(this).data('luas_tanah');
            $('#edit-modal').modal('show');
            $('.id').val(id);
            $('.nama').val(nama);
            $('.telp').val(telp);
            $('.alamat').val(alamat);
            $('.kelompok_tani').val(kelompok_tani);
            $('.pengelola_irigasi').val(pengelola_irigasi);
            $('.luas_tanah').val(luas_tanah);
        });
    </script>